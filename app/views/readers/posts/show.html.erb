<div class="card mb-5">
  <div class="card-body rounded">
    <div class="card blog-card border-0">
      <div class="header-image rounded-top" style="background-image: url(<%= url_for(@post.header_image) %>)"></div>
    </div>
    <div class="card-header">
      <h1 class="card-title"><%= @post.title%></h1>
    </div>
    <div class="card-header">
      <div class="d-flex justify-content-between">
        <small>
          By <%= @post.author.email %>
        </small>
        <% if @post.published? %>
          <small>
            <b>Published</b> <%= time_ago_in_words(@post.published_at) %> ago
          </small>
        <%else%>
          <small>Not published yet</small>
        <%end%>
      </div>
    </div>
    <div class="card-header rounded-bottom text-center">
      <small class="d-flex justify-content-between">
        <span>
          <% if current_author.id != @post.author_id %>
            <% like = current_author.likes.find_by(post: @post) %>
            <% if like.nil? %>
              <%= button_to "â™¡", likes_path, params: {like: {post_id: @post.id }}, method: :post, class:"btn btn-primary"%>
            <%else%>
              <%= button_to "ğŸ¤", like_path(like), method: :delete, class:"btn btn-secondary"%>
            <% end %>
          <%end%>
          <%= @post.likes.count%> Likes
        </span>
      </small>
    </div>
    <div class="mb-3 p-3">
      <div class="">
        <%= @post.content%>
      </div>
    </div>
  </div>
  <div class="card mb-3">
    <div class="card-body rounded mt-4">
      <p class="mb-3"><strong><%= @post.comments.count%> Comments</strong></p>
      <%= render @post.comments.where(parent_id: nil).includes(:author).order(id: :desc) %>
      <div class="mt-3 mb-3">
        <%= render partial: 'readers/comments/form', locals: {post: @post, parent: nil} %>
      </div>
    </div>
  </div>
</div>
