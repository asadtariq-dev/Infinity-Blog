<div class="card mb-5">
  <div class="card-body rounded">
    <div class="card blog-card border-0">
      <div class="header-image rounded-top" style="background-image: url(<%= url_for(@post.header_image) %>)"></div>
    </div>
    <div class="card-header">
      <h1 class="card-title"><%= @post.title%></h1>
    </div>
    <div class="card-header">
      <div class="d-flex justify-content-between">
        <small>
          By <strong><%= @post.author.first_name %> <%= @post.author.last_name %></strong>
        </small>
        <% if @post.published? %>
          <small>
            <b>Published</b> <%= time_ago_in_words(@post.published_at) %> ago
          </small>
        <%else%>
          <small>Not published yet</small>
        <%end%>
      </div>
    </div>
    <div class="card-header rounded-bottom text-center">
      <small class="d-flex justify-content-between">
        <span>
          <%= render 'shared/post_like', post: @post %>
        </span>
        <span class="text-danger">
           <%= render 'shared/report', locals: {comment: nil, post: @post} %>
        </span>
      </small>
    </div>
    <div class="mb-3 p-3">
      <div class="">
        <%= @post.content%>
      </div>
    </div>
  </div>
</div>
<div class="card mb-3">
  <%= render 'shared/comment_suggestion_tab', post: @post %>
</div>
