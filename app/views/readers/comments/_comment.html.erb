<div class="card mb-3 rounded">
  <div class="card-header d-flex justify-content-between">
    <% if comment.author == current_author %>
      <small>You</small>
    <%else%>
      <small><%= comment.author.email%></small>
    <% end %>
    <span>
      <small><%= time_ago_in_words(comment.created_at)%> ago</small>
    </span>
  </div>
  <div class="card-body rounded-bottom">
    <div class="mb-3">
      <%= comment.content%>
    </div>
    <div class="pl-4">
      <%= render comment.comments.includes(:author).order(id: :desc) %>
    </div>
    <% if comment.parent_id.nil? %>
      <a href="#" class="comment-form-display mb-1 text-decoration-none">Reply</a>
    <% end %>
    <div class="comment-form">
      <%= render partial: 'readers/comments/form', locals: {post: comment.post, parent: comment} %>
    </div>
  </div>
</div>
