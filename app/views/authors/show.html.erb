<small class="d-flex justify-content-between mb-2">
  <span></span>
  <span class="d-flex ">
signed in as <%= current_author.first_name%> <%= current_author.last_name%>
  </span>
</small>
<h4 class="d-flex justify-content-between mb-4">
  <span>Profile</span>
  <span class="d-flex ">
    <%= link_to  "Home", root_path, class:"btn btn-primary mb-3 mr-2" %>
    <%= link_to  "New Post", new_post_path, class:"btn btn-primary mb-3 mr-2" %>
    <%= button_to "Edit Profile", edit_author_registration_path, method: :get, class: "btn btn-primary mb-3 mr-2" %>
    <%= button_to "Sign Out", destroy_author_session_path, method: :delete, class: "btn btn-danger mb-3" %>
  </span>
</h4>
<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class="card mb-3 post-card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-2">
            <% if post.header_image.present? %>
              <div class="header-image rounded" style="background-image: url(<%= url_for(post.header_image) %>);"></div>
            <%end%>
          </div>
          <div class="col-md-10">
            <% if post.published? %>
              <span class="badge badge-primary mb-3"> Published</span>
            <%else%>
              <span class="badge badge-secondary mb-3"> Unpublished</span>
            <%end%>
            <% if post.published? %>
              <small>
                <%= time_ago_in_words(post.published_at) %> ago
              </small>
            <%end%>
            <h5 class="card-title mb-2"><%= post.title%></h5>
            <p class="text-secondary"><%= post.description%></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
