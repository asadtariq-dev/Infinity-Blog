<% posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none' do %>
    <div class="card mb-3 post-card border-0">
      <div class="card-body rounded">
        <div class="row">
          <div class="col-md-2">
            <% if post.header_image.present? %>
              <div class="header-image rounded" style="background-image: url(<%= url_for(post.header_image) %>);"></div>
            <%end%>
          </div>
          <div class="col-md-10">
            <% if post.published? %>
              <span class="badge badge-primary mb-3"> Published</span>
            <%else%>
              <span class="badge badge-secondary mb-3"> Unpublished</span>
            <%end%>
            <% if post.published? %>
              <small>
                <%= time_ago_in_words(post.published_at) %> ago
              </small>
            <%end%>
            <h5 class="card-title mb-2"><%= post.title%></h5>
            <p class="text-secondary"><%= post.description%></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
