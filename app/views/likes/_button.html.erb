<% like = current_like(likeable) %>
<% if like.nil? %>
  <%= button_to "♡", likes_path(author_id: current_author.id, likeable_id: likeable.id, likeable_type: likeable.class.to_s), format: :js, method: :post, remote: true, class:"btn btn-primary btn-sm" %>
<%else%>
  <%= button_to "❤️", like_path(like), method: :delete, remote: true, class:"btn btn-secondary btn-sm" %>
<% end %>
<% if likeable.class.to_s == "Post" %>
  <%= pluralize(likes_count(likeable), "Like")%>
<% end %>
