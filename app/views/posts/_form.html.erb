<%= form_with(model: post, local: true) do |form| %>
  <%= render 'shared/errors', model: post  %>
  <div class= 'form-group'>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class= 'form-group'>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: 'form-control'%>
  </div>
  <div class= 'form-group'>
    <%= form.label :header_image, style: "display: block" %>
    <%= form.file_field :header_image, accept: 'image/jpeg, image/png, image/jpg, image/webp'%>
    <div class="mt-1">
      <% if post.header_image.present? %>
        <small>Selected Image</small>
        <%= cl_image_tag(post.header_image.key, width: '100%')%>
      <%end%>
    </div>
  </div>
  <div>
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
