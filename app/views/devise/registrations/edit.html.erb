<%= render 'shared/navbar' %>
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= link_to "Back", author_profile_path(current_author), class: "btn btn-dark mb-3" %>
    <div class="card">
      <div class="card-header">
        <h6>Edit <%= resource_name.to_s.humanize %></h6>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class:"form-control", autofocus: true, autocomplete: "first-name" %>
          </div>
          <div class="form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class:"form-control", autocomplete: "last-name" %>
          </div>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group">
            <%= f.label :password %> <i>(<small>leave blank if you don't want to change it</small>)</i><br />
            <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
          </div>
          <div class="form-group">
            <%= f.label :current_password %> <i>(<small>to confirm changes</small>)</i><br />
            <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password" %>
          </div>
          <div class="actions">
            <%= f.submit "Update", class:"form-control btn btn-primary mb-3"%>
          </div>
        <% end %>
        <p>
          <%= link_to 'Delete my account', author_registration_path, class: "btn btn-danger btn-block", data: { turbo_method: :delete,
    turbo_confirm: "Are you sure?" } if author_signed_in? %>
        </p>
      </div>
    </div>
  </div>
</div>
