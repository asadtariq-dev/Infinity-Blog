<div class="row justify-content-center">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h6 class="card-title mb-0">Sign up</h6>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shared/errors", model: resource %>
          <%= f.error_notification %>
          <div class="form-group">
          <% if resource.errors.any? %>
            <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          <% end %>
          </div>
          <div class="form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class:"form-control", autofocus: true, autocomplete: "first-name", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class:"form-control", autocomplete: "last-name", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class:"form-control", autocomplete: "email", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class:"form-control", autocomplete: "new-password", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", required: true %>
          </div>
          <div class="actions mb-3">
          <%= f.button :submit ,'Sign Up', class: 'btn btn-primary'%>
            <%# f.submit "Sign up", class:"form-control btn btn-primary" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
