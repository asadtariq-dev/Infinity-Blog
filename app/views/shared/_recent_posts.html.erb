<div id="myCarousel" class="carousel h-100 slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class=""></li>
    <li data-target="#myCarousel" data-slide-to="1" class=""></li>
    <li data-target="#myCarousel" data-slide-to="2" class=""></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="first-slide d-block w-100 h-100" style="background-image: url(<%= url_for(@posts[0].header_image) %>)" alt="First slide">
      <div class="container">
        <div class="carousel-caption text-left">
          <h1><%= @posts[0].title%></h1>
          <p><%= @posts[0].description%></p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Read Blog</a></p>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <img class="second-slide d-block w-100" style="background-image: url(<%= url_for(@posts[1].header_image) %>)" alt="First slide">
      <div class="container">
        <div class="carousel-caption text-left">
          <h1><%= @posts[1].title%></h1>
          <p><%= @posts[1].description%></p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Read Blog</a></p>
        </div>
      </div>
    </div>

    <div class="carousel-item">
      <img class="second-slide d-block w-100" style="background-image: url(<%= url_for(@posts[2].header_image) %>)" alt="First slide">
      <div class="container">
        <div class="carousel-caption text-left">
          <h1><%= @posts[2].title%></h1>
          <p><%= @posts[2].description%></p>
          <p><a class="btn btn-lg btn-primary" href="#" role="button">Read Blog</a></p>
        </div>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
