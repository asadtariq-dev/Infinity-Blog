 <% like = current_author.likes.find_by(comment: comment) %>
<% if like.nil? %>
  <%= button_to "♡", likes_path, remote: true, params: {like: {comment_id: comment.id }}, method: :post, class:"btn btn-primary btn-sm mr-2" %>
<%else %>
  <%= button_to "🤍", like_path(like), method: :delete, class:"btn btn-secondary btn-sm mr-2" %>
<% end %>

