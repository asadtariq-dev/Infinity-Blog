<form action="<%= post_comments_path(post)%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if !parent.nil? %>
    <input type="hidden" name="comment[parent_id]" value="<%= parent.id %>">
  <% end %>
  <textarea class="form-control mb-2 bg-transparent text-white " name="comment[content]" placeholder="Type here..."></textarea>
  <input type="submit" name="Submit" class='btn btn-sm btn-primary'>
</form>
